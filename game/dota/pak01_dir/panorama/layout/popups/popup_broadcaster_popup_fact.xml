<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toast_shared.vcss_c"/>
		<include src="s2r://panorama/styles/popups/popup_broadcaster_popup_fact.vcss_c" />
	</styles>

	<snippets>
		<snippet name="SearchResultEntry">
			<Panel class="SearchResultEntry TopBottomFlow">
				<Label class="SearchResultLabel" text="{s:entry_text}" />
			</Panel>
		</snippet>
		<snippet name="QuickStat">
			<Button class="QuickStatButton">
				<Label id="QuickStatText" class="QuickStatText" text="{s:entry_text}" />
			</Button>
		</snippet>
	</snippets>
	
	<DOTABroadcasterPopupFact class="FactPopupPanel Hidden" popupbackground="dim" oncancel="DOTABroadcasterFactCancel()">
		<Panel class="LeftRightFlow">
			<Panel id="ItemSearch" class="SelectionPanel TopBottomFlow">
				<Panel class="SearchOptionsContainer LeftRightFlow">
					<Panel class="SearchOptionsTitle">
						<Label text="Items" class="SearchOptionsLabel"/>
					</Panel>

					<Panel class="SearchContainer">
						<Panel class="SearchBox">
							<TextEntry id="ItemSearchTextEntry" class="SearchTextEntry" placeholder="#DOTA_StoreBrowse_Search_Placeholder"/>
							<Button class="ClearSearchButton CloseButton" onactivate="$( '#ItemSearchTextEntry' ).text = '';" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
			<Panel id="HeroSearch" class="SelectionPanel TopBottomFlow">
				<Panel class="SearchOptionsContainer LeftRightFlow">
					<Panel class="SearchOptionsTitle">
						<Label text="Heroes" class="SearchOptionsLabel"/>
					</Panel>

					<Panel class="SearchContainer">
						<Panel class="SearchBox">
							<TextEntry id="HeroSearchTextEntry" class="SearchTextEntry" placeholder="#DOTA_StoreBrowse_Search_Placeholder"/>
							<Button class="ClearSearchButton CloseButton" onactivate="$( '#HeroSearchTextEntry' ).text = '';" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>		
			<Panel id="PlayerSearch" class="SelectionPanel TopBottomFlow">
				<Panel class="SearchOptionsContainer LeftRightFlow">
					<Panel class="SearchOptionsTitle">
						<Label text="Players" class="SearchOptionsLabel"/>
					</Panel>

					<Panel class="SearchContainer">
						<Panel class="SearchBox">
							<TextEntry id="PlayerSearchTextEntry" class="SearchTextEntry" placeholder="#DOTA_StoreBrowse_Search_Placeholder"/>
							<Button class="ClearSearchButton CloseButton" onactivate="$( '#PlayerSearchTextEntry' ).text = '';" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>		
		</Panel>

		<Panel class="StatsAndFacts LeftRightFlow" >
			<Panel class="InfoHolder TopBottomFlow">
				<Label class="InfoHeaderLabel" text="#DOTA_BroadcasterToasts_SelectedFacts"/>
				<Panel id="Facts" class="InfoContainer TopBottomFlow" />  <!-- filled in from code using snippet QuickStat -->
			</Panel>
			<Panel class="InfoHolder TopBottomFlow">
				<Label class="InfoHeaderLabel" text="#DOTA_BroadcasterToasts_SelectedStats"/>
				<Panel id="Stats" class="InfoContainer TopBottomFlow" />  <!-- filled in from code using snippet QuickStat -->
				<Panel class="CustomStatHolder LeftRightFlow">
					<Label id="CustomStatHeader" text="#DOTA_BroadcasterToasts_CustomStat"/>
					<TextEntry id="CustomStat" multiline="true" />
				</Panel>
			</Panel>
		</Panel>


		<Panel id="SearchResults"/>

		<Panel class="PopupButtonRow">
			<Button id="PreviewButton" class="PopupButton" onactivate="DOTADisplayBroadcasterFactToast(true)">
				<Label text="#DOTA_BroadcasterToasts_PreviewToast" />
			</Button>
			<Button id="AcceptButton" class="PopupButton" onactivate="DOTADisplayBroadcasterFactToast(false)">
				<Label text="#DOTA_BroadcasterToasts_ShowToast" />
			</Button>
			<Button class="PopupButton" onactivate="DOTABroadcasterDismissAllPopups()">
				<Label text="#DOTA_BroadcasterToasts_DismissAll" />
			</Button>
			<Button class="PopupButton" onactivate="UIPopupButtonClicked()">
				<Label text="#DOTA_Cancel" />
			</Button>
		</Panel>
	</DOTABroadcasterPopupFact>
</root>
