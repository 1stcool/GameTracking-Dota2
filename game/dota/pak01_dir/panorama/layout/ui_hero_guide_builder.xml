<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/quick_search.vcss_c" />
		<include src="s2r://panorama/styles/ui_hero_guide_builder.vcss_c" />
	</styles>

  <DOTAHeroGuideBuilder>

    <Panel class="TitleBar">
      <DOTAHeroImage id="HeroIcon" heroimagestyle="landscape"/>
      <Label class="GuideNameTitle" text="#DOTA_HeroGuide_NameLabel" />
      <TextEntry id="GuideName" />
      <RadioButton class="HeroGuideSubTab" group="HeroGuideTabs" onactivate="DOTAShowGuideOverviewBuilder()" >
        <Label text="#DOTA_HeroGuide_Overview" />
      </RadioButton>
      <RadioButton class="HeroGuideSubTab" group="HeroGuideTabs" selected="true" onactivate="DOTAShowItemGuideBuilder()" >
        <Label text="#DOTA_HeroGuide_ItemLabel" />
      </RadioButton>
      <RadioButton class="HeroGuideSubTab" group="HeroGuideTabs" onactivate="DOTAShowAbilityGuideBuilder()" >
        <Label text="#DOTA_HeroGuide_AbilityLabel" />
      </RadioButton>
    </Panel>

    <Panel class="GuideBuilderContainer">
      <DOTAGuideOverviewBuilder id="GuideOverviewBuilder" />
      <DOTAItemGuideBuilder id="ItemGuideBuilder" class="SmallItemIcons" />
      <DOTAAbilityGuideBuilder id="AbilityGuideBuilder" />
    </Panel>                          
    
    <Panel class="FooterBar">
      <Button class="ButtonBevel" onactivate="DOTAHeroGuideSave()">
        <Label text="#FileOpenDialog_Save"/>
      </Button>
      <Button class="ButtonBevel" onactivate="DOTAHeroGuideCancel()">
        <Label text="#DOTA_Cancel"/>
      </Button>
    </Panel>
    
	</DOTAHeroGuideBuilder>
</root>
