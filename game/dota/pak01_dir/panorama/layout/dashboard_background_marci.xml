<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/diretide/diretide.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_background_marci.vcss_c" />
	</styles>

	<scripts>
		<include src="s2r://panorama/scripts/util.vjs_c" />
		<include src="s2r://panorama/scripts/sequence_actions.vjs_c" />
		<include src="s2r://panorama/scripts/dota_sequence_actions.vjs_c" />
		<include src="s2r://panorama/scripts/dashboard_background_marci.vjs_c" />
	</scripts>

	<Panel class="DiretideBackground">
		<DOTAScenePanel id="BackgroundScene" map="maps/backgrounds/hero_frontpage_marci.vpk" renderdeferred="true" light="hero_light" camera="hero_camera_post" particleonly="false" antialias="true" />
        <DOTAScenePanel id="ForegroundScene" map="maps/backgrounds/hero_frontpage_marci_fg.vpk" pin-fov="vertical" renderdeferred="true" deferredalpha="true" light="hero_light" camera="hero_camera_post" particleonly="false" antialias="true" />
        <Image class="LensBlur" src="panel://ForegroundScene"></Image>
		<Panel id="BGVignette" hittest="false" />
		<Panel id="FeatureContent">
			<Panel id="FeatureContainer">
				<Panel id="FeatureLogo"  >
					<Label class="LogoIntro" text="#Frontpage_Hoodwink_Intro" />
					<!--                                                                                                                        -->
					<!--                                                               -->
				</Panel>
				<Panel id="ButtonRow">
					<TextButton class="PopupButton MarciButton" text="#Frontpage_Hoodwink_Website" onactivate="ExternalBrowserGoToDOTAURL( 'marci' )" />
					<TextButton class="PopupButton MarciButton DebutButton" text="#Frontpage_Hoodwink_Debut" onactivate="ManuallyTriggerMarciDebut()" /> 
					
				</Panel>
			</Panel>
		</Panel>
	</Panel>

</root>
