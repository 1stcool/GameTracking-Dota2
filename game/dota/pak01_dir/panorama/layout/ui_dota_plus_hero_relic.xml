<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_dota_plus_hero_relic.vcss_c" />
	</styles>

	<DOTAPlusHeroRelic>

		<Panel class="GemContainer" >
			<Panel class="GemContainerInternal">

				<Panel class="GemIconContainer">
					<EconItemImage id="GemIconImage" src="s2r://panorama/images/econ/sockets/gem_stat_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
				</Panel>

				<Panel class="GemDetails">
					<Label id="GemCount" text="#DOTA_econ_item_details_gem_strange_count"/>
					<Label class="GemDescription" text="#DOTA_econ_item_details_gem_description"/>
				</Panel>

			</Panel>

			<Panel class="GemDebug">
				<Label class="GemID" text="Type # - {d:strange_type}"/>
			</Panel>
		
		</Panel>

	</DOTAPlusHeroRelic>
</root>
