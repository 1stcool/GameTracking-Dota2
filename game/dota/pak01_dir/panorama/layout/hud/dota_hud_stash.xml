<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_stash.vcss_c" />
	</styles>

	<DOTAStash hittest="false" >
		<Panel id="stash_bg" hittest="false">
			<Panel id="stash_upper" hittest="false" />
			<Panel id="stash_lower" hittest="false" />
			<Panel id="stash_active_lower" hittest="false" />
			<Label id="title" text="#DOTA_STASH" hittest="false" />
		</Panel>
	
		<Button id="grab_all_button" onactivate="DOTAHUDStashGrabAll();" >
			<Label text="#DOTA_Inventory_Grab_All" hittest="false" />
		</Button>
		<Panel id="stash_row" hittest="false" />

		<Panel id="pickup_toggle" hittest="false">
			<!--<Panel id="pickup_toggle_icon" hittest="false" /> -->
			<ToggleButton id="pickup_toggle_button" onactivate="DOTAHUDStashPickupToggle();">
				<Label id="pickup_toggle_label" hittest="false" text="#DOTA_Stash_QueueForPickup" />
			</ToggleButton>
		</Panel>

	</DOTAStash>
</root>


