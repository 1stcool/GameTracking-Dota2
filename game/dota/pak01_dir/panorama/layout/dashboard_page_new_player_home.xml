<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_new_player_home.vcss_c" />
	</styles>

	<snippets>
		
		<snippet name="Tier">
			<Panel class="Tier">
				<Label class="TierTitle" text="{d:tier_number}. {s:tier_title}" />
				<Panel id="TierMissions" />
			</Panel>
		</snippet>
			
		<snippet name="WelcomeMission">
			<Panel class="WelcomeMission Major" onactivate="DOTAShowNewPlayerScenarioDetails( 'npe_basics' )">
				<Panel class="MissionContents">
					<Label class="MissionTitle" text="{s:mission_title}" />
					<Label class="MissionSubtitle" text="{s:mission_subtitle}" />
				</Panel>
				<Panel class="MissionStars">
					<Panel class="MissionStar" />
					<Panel class="MissionStar" />
					<Panel class="MissionStar" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>
		
	<scripts>
		<include src="s2r://panorama/scripts/dashboard_page_new_player_home.vjs_c" />
	</scripts>

	<DOTANewPlayerHomePage class="DashboardPage" onpagesetupsuccess="SetupMissions()">
		<Panel id="MainContents">
			<Label id="Title" text="Welcome to Dota" />
			<Panel id="Tiers" />
		</Panel>
		<Panel id="Overlay" hittest="false">
			<Panel id="ScenarioDetailsBackground" hittest="false" onactivate="DOTAShowNewPlayerScenarioDetails( '' )" />
			<Panel id="ScenarioDetails">
				<Label id="ScenarioDetailsName" text="{s:scenario_name}" />
				<Label id="ScenarioDetailsDescription" text="{s:scenario_description}" />
				<Panel class="FillHeight" />
				<TextButton id="ScenarioLaunchButton" class="PopupButton" text="Launch" onactivate="DOTALaunchSelectedNewPlayerScenario()" />
			</Panel>
		</Panel>
	</DOTANewPlayerHomePage>
</root>
