<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2019/bp_international2019_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_underlords_early_access.vcss_c" />
	</styles>

	<CustomLayoutPanel class="UnderlordsEarlyAccessCell" acceptsfocus="true" acceptsinput="true">
		<Label class="FrontpageCellHeader" text="#DOTA_Underlords_Tag" />
		<!--<Label id="Title" text="#DOTA_Underlords_Name" />-->
		<Label id="Subtitle" text="#DOTA_Underlords_Label" />
        <Label id="Description" text="#DOTA_Underlords_Description" />

		<!--<Panel id="Logo" />-->

		<Panel class="FillHeight" />
		
		<DOTAEventActionStatus id="ActionStatus" eventid="EVENT_ID_INTERNATIONAL_2019" actionid="underlords_early_access">
			
			<Panel id="NotEligible" class="ActionState">
				<Label id="NotEligibleDesc" text="#DOTA_Underlords_Disabled" />
			</Panel>
			
			<Panel id="Claimable" class="ActionState">
				<!--<Image id="SteamLogo" src="s2r://panorama/images/icon_steamlogo_small_psd.vtex" />-->
				<TextButton id="ClaimButton" class="UnderlordsButton" text="#DOTA_Underlords_Add" onactivate="DOTAClaimEventActionByName( EVENT_ID_INTERNATIONAL_2019, underlords_early_access )" />
			</Panel>

			<Panel id="AlreadyClaimed" class="ActionState">
				<!--<Label id="AlreadyClaimedTitle" text="#DOTA_Underlords_Claimed" />-->
				<!--<Label id="AlreadyClaimedDesc" text="Go view it in your steam library." />-->
				<TextButton id="FriendKeysButton" class="UnderlordsButton" text="#DOTA_Underlords_FriendKeys" onactivate="DOTAViewUnderlordsFriendKeys()" />
			</Panel>
			
		</DOTAEventActionStatus>

		<Label id="BlogLink" text="#DOTA_Underlords_Blog" onactivate="ExternalBrowserGoToDOTABlogURL( '2019/06/dota-underlords' )" />
	
	</CustomLayoutPanel>

</root>
