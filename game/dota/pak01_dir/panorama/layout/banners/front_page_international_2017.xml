<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_international_2017.vcss_c" />
	</styles>

	<Panel class="FrontpageTakeover">
		<Panel id="MainContents">
			<Panel id="Header">
				<Panel class="Title" />
				<Panel class="FillWidth" />
				<Countdown id="Countdown" start-time="1501686000">
					<Label class="CountdownHeader" text="#DOTA_International2017_GroupStageBegins" />
					<Label class="CountdownTime MonoNumbersFont" text="{t:d:t:countdown_time}" />
				</Countdown>
			</Panel>

			<Panel id="Contents">
				<Panel class="ContentsRow">
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																						cellimage="s2r://panorama/images/battlepass/ti7/blog_meepos_png.vtex"
																						cellheader="#DOTA_International2017_NewPlayer_Header"
																						celltitle="#DOTA_International2017_NewPlayer_Title"
																						onactivate="BrowserGoToURL( http://blog.dota2.com/2017/07/welcoming-new-players/ )" />
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																					cellimage="s2r://panorama/images/front_page/ti7/bracket_psd.vtex"
																					cellheader="#DOTA_International2017_Format_Header"
																					celltitle="#DOTA_International2017_Format_Title"
																					onactivate="BrowserGoToDOTAURL( international/replays )" />
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																					cellimage="s2r://panorama/images/front_page/ti7/babyrosh_psd.vtex"
																					cellheader="#DOTA_International2017_BabyRosh_Header"
																					celltitle="#DOTA_International2017_BabyRosh_Title"
																					onactivate="BrowserGoToURL( http://blog.dota2.com/2017/07/level-2000-collectors-baby-roshan/ )"/>
				</Panel>
				<Panel class="ContentsRow">
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																					cellimage="s2r://panorama/images/front_page/ti7/blog_filmcontest_2017_jpg.vtex"
																					cellheader="#DOTA_Unternational2017_ShortFilm_Header"
																					celltitle="#DOTA_Unternational2017_ShortFilm_Title"
																					onactivate="DOTAShowShortFilmVote()" />
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																					cellimage="s2r://panorama/images/front_page/ti7/newbstream_psd.vtex"
																					cellheader="#DOTA_International2017_NewcomerStream_Header"
																					celltitle="#DOTA_International2017_NewcomerStream_Title"
																					onactivate="BrowserGoToDOTAURLAnchor( international/overview, HowToWatchContainer )" />
					<DOTAFrontpageDefaultButton class="FrontpageCell InternationalCell"
																					cellimage="s2r://panorama/images/front_page/ti7/archive_psd.vtex"
																					cellheader="#DOTA_International2017_Archives_Header"
																					celltitle="#DOTA_International2017_Archives_Title"
																					onactivate="ExternalBrowserGoToURL( https://www.youtube.com/playlist?list=PLxkyNsoBqOdBQr1cPDxGA00mzmRS94sNy )" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="Overlay" hittest="false" hittestchildren="false">
			<DOTAScenePanel id="Aegis" map="scenes/battlepass_ti7/aegis_rotate" camera="camera_1" antialias="true" particleonly="false"/>
		</Panel>

	</Panel>

</root>
