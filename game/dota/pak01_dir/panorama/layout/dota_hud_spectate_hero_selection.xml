<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_hud_spectate_hero_selection.vcss_c" />
	</styles>
	
	<snippets>
		<snippet name="TeamPlayer">
			<Panel class="TeamPlayer">
				<DOTAUserName id="UserName" />
				<DOTAAvatarImage id="Avatar" />
				<Panel id="LeaderIcon" hittest="false"/>
			</Panel>
		</snippet>

		<snippet name="BannedHero">
			<Panel class="BannedHero">
				<DOTAHeroImage id="BannedHeroImage" />
				<Panel id="CrossLine" />
			</Panel>
		</snippet>
		
		<snippet name="Hero">
			<Panel class="Hero">
				<Panel class="HeroCardBackground">
					<Label id="PlayerName" html="true" text="{s:player_name}" />
					<Label id="AsLabel" html="true" text="is" />
					<Panel id="HeroStrAgiIntIcon" />					
					<Panel id="HeroFooter">
						<Panel id="Abilities" />
					</Panel>
					<Panel id="HeroHeader">
						<Panel id="HeroNameBrush"/>
						<Label id="HeroName" text="{s:hero_name}" />
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	
	<DOTASpectateHeroSelection>
	
		<Panel id="Header">
			<Button id="DashboardButton" onactivate="DOTAHUDShowDashboard();" />
			<Button id="SettingsButton" onactivate="DOTASettings();" />
			<Panel id="Title">
				<DOTALeagueImage id="TournamentLogo"/>
				<Panel class="TopBottomFlow">
					<Label id="TournamentName" text="{g:dota_league_name:league_id}" />
					<Label id="GameName" />
				</Panel>
			</Panel>
			<Label id="GameMode" text="{s:game_mode}" />
		</Panel>
		<Panel id="PhaseStatus">
			<Label id="PhaseTimer" text="{s:phase_time_left}"/>
		</Panel>
		
		
		<Panel id="Row0" class="DireTeam">
		<DOTAScenePanel id="RadiantScene" map="backgrounds/spectate_background_default" camera="radiant_camera" light="herolight" renderdeferred="true" deferredalpha="false" antialias="true" particleonly="false"/>
		<Panel id="HeroFocus" class="HeroFocusVignetteContainer LeftRightFlow">
			<Panel class="OutsideDark"/>
			<Panel class="HeroVignette Vignette"/>
			<Panel class="OutsideDark"/>
		</Panel>
			<Panel class="DevCameraShift LeftRightFlow">
				<TextButton id="hero0" text="0" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera_hero0', 1.5) RemoveStyle( Row0, ViewAll )"/>
				<TextButton id="hero1" text="1" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera_hero1', 1.5) RemoveStyle( Row0, ViewAll )"/>
				<TextButton id="hero2" text="2" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera_hero2', 1.5) RemoveStyle( Row0, ViewAll )"/>
				<TextButton id="hero3" text="3" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera_hero3', 1.5) RemoveStyle( Row0, ViewAll )"/>
				<TextButton id="hero4" text="4" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera_hero4', 1.5) RemoveStyle( Row0, ViewAll )"/>
				<TextButton id="heroall" text="A" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( RadiantScene, 'radiant_camera', 1.5) AddStyle( Row0, ViewAll )"/>
			</Panel>
			<Panel class="RowCenter">
				<Label id="Phase0" text="{s:phase0}" html="true" />
				<Label id="TeamName0" text="{s:team_name_0}" />
				<Panel id="HeroList0" class="HeroList" />
			</Panel>
			<Panel id="TeamMembersContainer0">
				<DOTAUGCImage id="TeamLogo0" />
				<Panel id="TeamMemberList0" />
			</Panel>
		</Panel>
		
		
		<Panel id="Row1" class="RadiantTeam">
		<DOTAScenePanel id="DireScene" map="backgrounds/spectate_background_default" camera="dire_camera" light="herolight" renderdeferred="true" deferredalpha="false" antialias="false" particleonly="false"/>
		<Panel id="HeroFocus" class="HeroFocusVignetteContainer LeftRightFlow">
			<Panel class="OutsideDark"/>
			<Panel class="HeroVignette Vignette"/>
			<Panel class="OutsideDark"/>
		</Panel>		
			<Panel class="DevCameraShift LeftRightFlow">
				<TextButton id="hero0" text="0" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera_hero0', 1.5) RemoveStyle( Row1, ViewAll )"/>
				<TextButton id="hero1" text="1" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera_hero1', 1.5) RemoveStyle( Row1, ViewAll )"/>
				<TextButton id="hero2" text="2" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera_hero2', 1.5) RemoveStyle( Row1, ViewAll )"/>
				<TextButton id="hero3" text="3" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera_hero3', 1.5) RemoveStyle( Row1, ViewAll )"/>
				<TextButton id="hero4" text="4" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera_hero4', 1.5) RemoveStyle( Row1, ViewAll )"/>
				<TextButton id="heroall" text="A" class="DevCameraCycle" onactivate="DOTAGlobalSceneSetCameraEntity( DireScene, 'dire_camera', 1.5) AddStyle( Row1, ViewAll )"/>
			</Panel>		
			<Panel id="BansContainer1">
				<Label id="BansLabel1" text="#DOTA_Bans" />
				<Panel id="BanList1" />
			</Panel>
			<Panel class="RowCenter">
				<Label id="Phase1" text="{s:phase1}" html="true" />
				<Label id="TeamName1" text="{s:team_name_1}" />
				<Panel id="HeroList1" class="HeroList" />
			</Panel>
			<Panel id="TeamMembersContainer1">
				<DOTAUGCImage id="TeamLogo1" />
				<Panel id="TeamMemberList1" />
			</Panel>
		</Panel>
			<Panel id="BansContainer0">
				<Label id="BansLabel0" text="#DOTA_Bans" />
				<Panel id="BanList0" />
			</Panel>		
		<DOTAHeroPickTimeline id="HeroPickTimeline" />

		<DOTACDHeroPool id="HeroPool" />
		
	</DOTASpectateHeroSelection>
	
</root>


