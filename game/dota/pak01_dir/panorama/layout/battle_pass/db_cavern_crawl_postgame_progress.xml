<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/compendiums/compendium_styles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/db_cavern_crawl_postgame_progress.vcss_c" />
	</styles>

	<snippets>

		<snippet name="DescriptionLine">

			<Panel class="DescriptionLine">
				<Panel class="Dot" />
				<Label class="CavernDescription ChallengeCompleteDesc" text="#DOTACavernCrawl_Progress_ChallengeComplete" />
				<Label class="CavernDescription ChallengeAvailableDesc" text="#DOTACavernCrawl_Progress_ChallengeAvailable" />
				<Label class="CavernDescription ClaimingRewardDesc" text="#DOTACavernCrawl_Progress_ClaimingReward" />
				<Label class="CavernDescription ClaimingItemDesc" text="#DOTACavernCrawl_Progress_ClaimingItem" />
				<Label class="CavernDescription ChallengeRetiredDesc" text="#DOTACavernCrawl_Progress_ChallengeRetired" />
			</Panel>

		</snippet>

	</snippets>
	
	<DOTACavernCrawlPostGameProgress>

		<Panel class="CavernCrawl">

			<Panel class="MapContainer">

			<Panel class="MapZoomContainer">

					<Panel id="Zoom">
						<DOTACavernCrawlMap id="CavernCrawlMap" hittest="false"/>
					</Panel>

				</Panel>
			</Panel>

			<Panel class="DescriptionOuter">
				<Panel class="TitleContainer">
					<Panel class="CavernCrawlLogo" />
					<Label class="CavernDescriptionTitle" text="#DOTACavernCrawl_ProgressDescriptionTitle" />
				</Panel>
				<Panel class="FillHeight" />
				<Panel id="DescriptionContainer">
					<!-- Filled in by code -->
				</Panel>
			</Panel>
			
		</Panel>
		
  </DOTACavernCrawlPostGameProgress>
</root>
