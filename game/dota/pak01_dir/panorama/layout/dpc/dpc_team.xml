					<Label class="PerksLabel" text="Team Perks"/>
					<Panel class="TierRewards LeftRightFlow">
						<Panel class="Tier1Reward TopBottomFlow">
							<Image class="EmoticonImage"/>
							<Label class="TierLabel Tier1Label" text="Tier 1"/>
							<Label class="TierDetail" text="Emoticons"/>
						</Panel>
						<Panel class="Tier2Reward TopBottomFlow">
							<Image class="EmoticonImage"/>
							<Label class="TierLabel Tier2Label" text="Tier 2"/>
							<Label class="TierDetail" text="Sprays"/>
						</Panel>
						<Panel class="Tier3Reward TopBottomFlow">
