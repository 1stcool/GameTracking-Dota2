<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dpc/dpc_team.vcss_c" />
	</styles>

	<snippets>
		<snippet name="LeaguePlacement">
			<Panel class="RecordEntry LeftRightFlow">
				<Label class="RecordNumber RecordFirst" text="{s:placement}"/>
				<Label class="RecordTourney" text="{s:league_name}"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTADPCTeamPage class="TeamPage DashboardPage">
		<Panel class="TopContainer LeftRightFlow">
			<DOTATeamImage id="TeamLogo"/>
			<Panel class="TeamInfo TopBottomFlow">
				<Panel class="TeamInfoFirst LeftRightFlow">
					<Label class="Title" text="{s:team_name}"/>
					<Label class="Tag" text="({s:tag})"/>					
				</Panel>
				<Panel class="TeamInfoStandings LeftRightFlow">
					<Label class="Position" text="{s:place}"/>
					<Label class="Standings" text="{d:wins}-{d:losses}"/>
				</Panel>
				<Label class="Division" text="{s:division}"/>
				<Label class="Division" text="{s:region}"/>
			</Panel>
