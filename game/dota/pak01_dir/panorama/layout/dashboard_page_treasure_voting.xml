<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/current_battle_pass.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_treasure_voting.vcss_c" />
	</styles>

	<snippets>
		<snippet name="Creator">
			<Panel class="Creator">
				<DOTAAvatarImage id="CreatorAvatarImage" />
				<Label id="CreatorName" text="{g:dota_persona:account_id}" />
			</Panel>
		</snippet>
	</snippets>

	<DOTATreasureVotingPage class="DashboardPage">
		<Panel id="MainContents">

			<Panel id="Background" class="CenterContents">
				<Panel id="HeroInfo">
					<DOTAHeroImage id="HeroImage" />
					<Label id="HeroName" text="{g:dota_hero_name:hero_id}" />
				</Panel>

			</Panel>

			<DOTALargeModelPreview id="LargeModelPreview" />

			<Panel id="Foreground" class="CenterContents">

				<Panel id="ModelControls">

					<Panel id="ButtonsContainer">
						<TextButton id="PreviousButton" class="NavigateButton" text="&lt;" onactivate="DOTATreasureVotingIncrementSelectedItem( -1 )" />
						<TextButton id="UpvoteButton" class="VoteButton" text="^" onactivate="DOTATreasureVotingVoteForItem( 1 )" />
						<TextButton id="DownvoteButton" class="VoteButton" text="v" onactivate="DOTATreasureVotingVoteForItem( -1 )" />
						<TextButton id="NextButton" class="NavigateButton" text="&gt;" onactivate="DOTATreasureVotingIncrementSelectedItem( 1 )" />
					</Panel>
					<Label id="ItemNumber" text="Set {d:item_index} of {d:item_count}" />

				</Panel>

				<Panel id="RightPanel">
					<Label id="ContestSubtitle" text="2019 Collector's Cache" />
					<Label id="ContestTitle" text="Treasure Vote" />
					<Label id="ContestDescription" text="Vote on each set that you think should belong in the 2019 Collector's Cache." />

					<Panel class="InfoSection">
						<Panel class="InfoSectionHeader">
							<Label class="InfoSectionLabel" text="Created By" />
						</Panel>
						<Panel id="CreatorsList">
							<Panel class="Creator">
								<DOTAAvatarImage id="CreatorAvatarImage" accountid="local" />
								<Label id="CreatorName" text="{g:dota_persona:account_id}" />
							</Panel>
							<Panel class="Creator">
								<DOTAAvatarImage id="CreatorAvatarImage" accountid="local" />
								<Label id="CreatorName" text="{g:dota_persona:account_id}" />
							</Panel>
							<Panel class="Creator">
								<DOTAAvatarImage id="CreatorAvatarImage" accountid="local" />
								<Label id="CreatorName" text="{g:dota_persona:account_id}" />
							</Panel>
							<Panel class="Creator">
								<DOTAAvatarImage id="CreatorAvatarImage" accountid="local" />
								<Label id="CreatorName" text="{g:dota_persona:account_id}" />
							</Panel>
						</Panel>
					</Panel>

					<Panel class="InfoSection">
						<Panel class="InfoSectionHeader">
							<Label class="InfoSectionLabel" text="Included in this Bundle" />
						</Panel>
						<Panel id="IncludedItemsList">
							<Panel class="IncludedItemPlaceholder" />
							<Panel class="IncludedItemPlaceholder" />
							<Panel class="IncludedItemPlaceholder" />
							<Panel class="IncludedItemPlaceholder" />
						</Panel>
					</Panel>

					<Panel class="InfoSection">
						<Panel class="InfoSectionHeader">
							<Label class="InfoSectionLabel" text="In-game Preview" />
							<Panel class="FillWidth" />
							<Button id="DemoButton">
								<Label text="Demo Item" />
							</Button>
						</Panel>
						<Panel id="InGamePreviewPlaceholder" />
						
					</Panel>



				</Panel>

			</Panel>

		</Panel>
	</DOTATreasureVotingPage>

</root>
