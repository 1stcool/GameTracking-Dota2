<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_home.vcss_c" />
		<include src="s2r://panorama/styles/friend_menu.vcss_c" />
		<include src="s2r://panorama/styles/friend_menu_home.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
	</styles>

	<DOTAHomePage class="DashboardPage" hittest="false" onnavigatedto="DOTASetFriendsMenuVisible( true )" onnavigatedaway="DOTASetFriendsMenuVisible( false )" dashboardclass="OnHomePage">
		<Panel id="DDBTakeover" class="HideForSteamChina">
			<Panel id="DDBBackgroundContainer" class="FadeOut FadeOutLight"/>
			<DOTAParticleScenePanel id="TBBGScene" particleonly="true" particleName="particles/ui/ddb_tb_bg.vpcf" squarePixels="true" cameraOrigin="150 0 0" lookAt="0 0 0" fov="90" hittest="false"/>
			<Panel id="DDBTBBackgroundContainer" class="FadeOut FadeOutInTB">
				<DOTAParticleScenePanel id="TerrorbladeEyes" particleonly="true" particleName="particles/ui/ddb_tb_eyess.vpcf" squarePixels="true" cameraOrigin="390 0 45" lookAt="0 0 0" fov="40" hittest="false"/>
			</Panel>
			<Panel id="BramContainer" class="FadeOut FadeOutDark">
				<Panel id="DDB_BramFG"/>
				<AnimatedImageStrip id="DDB_BramFGSheet" src="s2r://panorama/images/leaf_pages/ddb_s1_promo/bramsheet_psd.vtex" frametime="150ms" defaultframe="1" />
			</Panel>
			<Panel id="DavContainer" class="FadeOut FadeOutDark">
				<Panel id="DDB_DavFG"/>
				<AnimatedImageStrip id="DDB_DavFGCape" src="s2r://panorama/images/leaf_pages/ddb_s1_promo/capesheet_psd.vtex" framewidth="604px" frametime="150ms" defaultframe="1" />
			</Panel>
			<DOTAParticleScenePanel id="DavionScene" particleonly="true" particleName="particles/ui/ddb_davrays.vpcf" cameraOrigin="0 -400 -400" lookAt="200 0 0" fov="30" hittest="false"/>
			<DOTAParticleScenePanel id="TerrorbladeScene" particleonly="true" particleName="particles/ui/ddb_tb_glass.vpcf" squarePixels="true" cameraOrigin="500 0 0" lookAt="0 0 0" fov="90" hittest="false"/>
			<Panel id="TBVignette" hittest="false" />
			<Panel id="DDBTakeoverContentContainer">
				<Panel id="TopLeftContainer">
					<Panel id="DDBLogoBlack"/>
					<Label id="ComingDate" text="#DOTA_DDB_Promo_Coming_Release_Date" onactivate="DOTAShowDDBPromoPage()"/>
				</Panel>
				<Panel id="TopLeftContainer_TB">
					<Panel id="DDBLogoBlack"/>
				</Panel>
				<Panel id="BottomLeftContainer">
					<Panel class="CountdownContainer LeftRightFlow">
						<Panel class="CountdownUnit Days"><Label class="CountdownNumber MonoNumbersFont" text="{s:end_days}"/><Label class="CountdownLabel" text="#UI_days_short"/></Panel>
						<Panel class="CountdownUnit Hours"><Label class="CountdownNumber MonoNumbersFont" text="{s:end_hours}"/><Label class="CountdownLabel" text="#UI_hours_short"/></Panel>
						<Panel class="CountdownUnit Minutes"><Label class="CountdownNumber MonoNumbersFont" text="{s:end_minutes}"/><Label class="CountdownLabel" text="#UI_minutes_short"/></Panel>
						<Panel class="CountdownUnit Seconds"><Label class="CountdownNumber MonoNumbersFont" text="{s:end_seconds}"/><Label class="CountdownLabel" text="#UI_seconds_short"/></Panel>
					</Panel>
					<Panel id="DDBCopyContainer" hittest="false">
						<Label id="DDBCopy" text="#DOTA_DDB_Promo_Takeover_Copy" html="true"/>
					</Panel>
					<Label id="WatchTrailerButton" text="#DOTA_DDB_Promo_Takeover_CellCall" onactivate="DOTAShowDDBPromoPage()"/>
				</Panel>
				<Panel id="BottomLeftContainer_TB">
					<Panel id="WatchShowButton" onactivate="ExternalBrowserGoToURL( 'https://www.netflix.com/dotadragonsblood' )">
						<Label id="WatchShowLabel" text="#DOTA_Frontpage_NPX_WatchNow" /><Panel class="ExternalIcon"/>
					</Panel>
					<Label id="NFPageLink" text="#DOTA_Frontpage_NPX_NFPageLink" html="true" onactivate="DOTAShowDDBPromoPage()"/>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="StatLine" class="LeftRightFlow">
			<DOTAAntiAddictionBadge class="StatLineContainer" />
			<!--<Panel id="MonthlyPlayersContainer" class="StatLineContainer">
				<Label class="StatLineNumber" text="#DOTA_MonthlyPlayers"/>
				<Label text="#DOTA_MonthlyPlayersLabel"/>
			</Panel>
			<Panel id="CurrentPlayersContainer" class="StatLineContainer">
				<Label class="StatLineNumber" text="#DOTA_CurrentPlayers"/>
				<Label text="#DOTA_CurrentPlayersLabel"/>
			</Panel>
			<Panel class="StatLineContainer">
				<Label class="StatLineNumber" text="#DOTA_CurrentTime"/>
			</Panel>-->
		</Panel>

		<Panel id="TodayPages" hittest="false">
			
			<Panel id="RightColumn" hittest="false">

				<DOTAFrontpageContents id="FrontpageContents" />

				<Panel class="StatusAndFriendFeed TopBottomFlow">
					<Panel id="StatusContainer">
						<TextEntry id="StatusTextEntry" maxchars="100" placeholder="#DOTA_Feed_Say_Something" oninputsubmit="DOTAHomePagePostSocialFeedMessage()" />
						<Button id="StatusSubmit" onactivate="DOTAHomePagePostSocialFeedMessage()" >
							<Panel id="StatusSubmitIcon"/>
						</Button>
					</Panel>
					<DOTAFeed id="FriendsFeed" />
				</Panel>

			</Panel>

		</Panel>

	</DOTAHomePage>

</root>
